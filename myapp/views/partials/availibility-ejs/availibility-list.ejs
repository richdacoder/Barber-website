<link rel="stylesheet" href="/availibility.css">

<div class="availibility-list">
  <div class="availability-container">
    <h2>Weekly Availability</h2>
    <form id="availabilityForm" action="/availibility" method="POST">
      <% const days = ["Monday", "Tuesday", "Wednesday", "Thursday", "Friday", "Saturday", "Sunday"]; %>

      <% days.forEach(day => {
           // Filter saved slots for this day
           const savedSlots = data.filter(slot => slot.day_of_week === day);
           const isChecked = savedSlots.length > 0;
      %>
        <div class="day-row" data-day="<%= day %>">
          <div class="day-label">
            <% if (isChecked) { %>
              <input type="checkbox" name="days" value="<%= day %>" class="day-checkbox" checked>
            <% } else { %>
              <input type="checkbox" name="days" value="<%= day %>" class="day-checkbox">
            <% } %>
            <strong><%= day %></strong>
          </div>

          <% if (isChecked) { %>
            <!-- Time inputs displayed because checkbox is checked -->
            <div class="time-inputs" style="display:block;">
              <% savedSlots.forEach(slot => { %>
                <div class="time-pair">
                  <input type="time" name="start_<%= day %>[]"
                         value="<%= slot.slot_time ? slot.slot_time.slice(0,5) : '' %>">
                  <input type="time" name="end_<%= day %>[]"
                         value="<%= slot.end_time ? slot.end_time.slice(0,5) : '' %>">
                </div>
              <% }); %>
            </div>
            <div class="unavailable-text" style="display:none;"><em>Unavailable</em></div>
          <% } else { %>
            <!-- Checkbox not checked: hide time inputs and show unavailable -->
            <div class="time-inputs" style="display:none;">
              <div class="time-pair">
                <input type="time" name="start_<%= day %>[]">
                <input type="time" name="end_<%= day %>[]">
              </div>
            </div>
            <div class="unavailable-text" style="display:block;"><em>Unavailable</em></div>
          <% } %>

          <div class="action-buttons">
            <button type="button" class="btn addTime">+</button>
            <button type="button" class="btn btn-danger removeTime">x</button>
            <button type="button" class="btn btn-copy copyTime">ðŸ“‹</button>
          </div>
        </div>
      <% }); %>

      <div class="form-actions">
        <button type="submit" class="btn">Save Availability</button>
      </div>
    </form>
  </div>

  <div class="copy-popup" id="copyPopup">
    <h4>Copy times to:</h4>
    <div id="copyDays"></div>
    <button class="btn" id="confirmCopy">Copy</button>
  </div>
</div>

<script src="availibility.js"></script>
